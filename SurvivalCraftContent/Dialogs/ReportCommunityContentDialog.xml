<CanvasWidget xmlns="runtime-namespace:Game">

  <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="0, 0, 0, 0" IsHitTestVisible="true" />

  <CanvasWidget Size="640, 400" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 15">

      <LabelWidget Font="{Fonts/Pericles32}" HorizontalAlignment="Center" Text="Report Community Content"/>
      <LabelWidget Name="ReportCommunityContentDialog.Name" Font="{Fonts/Pericles24}" HorizontalAlignment="Center"/>

      <CanvasWidget Size="0, 20" />

      <LabelWidget Font="{Fonts/Pericles18}" HorizontalAlignment="Center" Color="128, 128, 128" Text="Please tick one that applies most:"/>

      <CanvasWidget Size="0, 5" />

      <CanvasWidget Margin="100, 0">
        <RectangleWidget OutlineColor="128, 128, 128, 255" FillColor="0, 0, 0, 0"/>
        <ScrollPanelWidget Direction="Vertical" Margin="3, 3" >
          <StackPanelWidget Name="ReportCommunityContentDialog.Container" Direction="Vertical" Margin="10, 0" />
        </ScrollPanelWidget>
      </CanvasWidget>

      <CanvasWidget Size="0, 20" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" Margin="5, 0">
        <BevelledButtonWidget Name="ReportCommunityContentDialog.Report" Text="Report" Style="{Styles/ButtonStyle_160x60}" VerticalAlignment="Center" Margin="40, 0"/>
        <BevelledButtonWidget Name="ReportCommunityContentDialog.Cancel" Style="{Styles/ButtonStyle_160x60}" Text="Cancel" Margin="40, 0"/>
      </StackPanelWidget>

    </StackPanelWidget>
  </CanvasWidget>

</CanvasWidget>
