<CanvasWidget xmlns="runtime-namespace:Game">

  <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="0, 0, 0, 0" IsHitTestVisible="true" />

  <CanvasWidget Size="600, 420" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />

    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" Margin="10, 0" IsVisible="true">

      <StackPanelWidget Name="EditSignDialog.LinesPage" Direction="Vertical">

        <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
          <LabelWidget Text="Enter Sign Text Lines" HorizontalAlignment="Center" Margin="0, 15" />
        </StackPanelWidget>

        <CanvasWidget Size="Infinity, Infinity">
          <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanelWidget Margin="0, 2">
              <CanvasWidget Size="70, 50" VerticalAlignment="Center">
                <LabelWidget Text="Line 1" Font="{Fonts/Pericles18}" VerticalAlignment="Center" Color="128, 128, 128" />
              </CanvasWidget>
              <CanvasWidget Size="360, 50" VerticalAlignment="Center" >
                <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" />
                <TextBoxWidget Name="EditSignDialog.TextBox1" Title="Enter Sign Line 1" Size="360, 50" Description="" Font="{Fonts/Pericles24}" VerticalAlignment="Center" MaximumLength="16" Margin="10, 0"/>
              </CanvasWidget>
              <BevelledButtonWidget Name="EditSignDialog.ColorButton1" Style="{Styles/ButtonStyle_ColorPicker}" Margin="20, 0" VerticalAlignment="Center" />
            </StackPanelWidget>

            <StackPanelWidget Margin="0, 2">
              <CanvasWidget Size="70, 50" VerticalAlignment="Center">
                <LabelWidget Text="Line 2" Font="{Fonts/Pericles18}" VerticalAlignment="Center" Color="128, 128, 128" />
              </CanvasWidget>
              <CanvasWidget Size="360, 50" VerticalAlignment="Center">
                <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" />
                <TextBoxWidget Name="EditSignDialog.TextBox2" Title="Enter Sign Line 2" Size="360, 50" Description="" Font="{Fonts/Pericles24}" VerticalAlignment="Center" MaximumLength="16" Margin="10, 0"/>
              </CanvasWidget>
              <BevelledButtonWidget Name="EditSignDialog.ColorButton2" Style="{Styles/ButtonStyle_ColorPicker}" Margin="20, 0" VerticalAlignment="Center" />
            </StackPanelWidget>

            <StackPanelWidget Margin="0, 2">
              <CanvasWidget Size="70, 50" VerticalAlignment="Center">
                <LabelWidget Text="Line 3" Font="{Fonts/Pericles18}" VerticalAlignment="Center" Color="128, 128, 128" />
              </CanvasWidget>
              <CanvasWidget Size="360, 50" VerticalAlignment="Center">
                <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" />
                <TextBoxWidget Name="EditSignDialog.TextBox3" Title="Enter Sign Line 3" Size="360, 50" Description="" Font="{Fonts/Pericles24}" VerticalAlignment="Center" MaximumLength="16" Margin="10, 0"/>
              </CanvasWidget>
              <BevelledButtonWidget Name="EditSignDialog.ColorButton3" Style="{Styles/ButtonStyle_ColorPicker}" Margin="20, 0" VerticalAlignment="Center" />
            </StackPanelWidget>

            <StackPanelWidget Margin="0, 2">
              <CanvasWidget Size="70, 50" VerticalAlignment="Center">
                <LabelWidget Text="Line 4" Font="{Fonts/Pericles18}" VerticalAlignment="Center" Color="128, 128, 128" />
              </CanvasWidget>
              <CanvasWidget Size="360, 50" VerticalAlignment="Center">
                <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" />
                <TextBoxWidget Name="EditSignDialog.TextBox4" Title="Enter Sign Line 4" Size="360, 50" Description="" Font="{Fonts/Pericles24}" VerticalAlignment="Center" MaximumLength="16" Margin="10, 0"/>
              </CanvasWidget>
              <BevelledButtonWidget Name="EditSignDialog.ColorButton4" Style="{Styles/ButtonStyle_ColorPicker}" Margin="20, 0" VerticalAlignment="Center" />
            </StackPanelWidget>

          </StackPanelWidget>
        </CanvasWidget>

      </StackPanelWidget>

      <StackPanelWidget Name="EditSignDialog.UrlPage" Direction="Vertical" IsVisible="false">
        
        <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 15">
          <LabelWidget Text="Enter Sign URL" HorizontalAlignment="Center" />
          <LabelWidget Text="When playing in adventure mode only, tapping" Font="{Fonts/Pericles18}" Color="128, 128, 128" HorizontalAlignment="Center" Margin="0, 0" />
          <LabelWidget Text="the sign will open this URL in the browser" Font="{Fonts/Pericles18}" Color="128, 128, 128" HorizontalAlignment="Center" Margin="0, 0" />
        </StackPanelWidget>

        <CanvasWidget Size="Infinity, Infinity">
          <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <StackPanelWidget Margin="0, 10">
              <CanvasWidget Size="480, 50" VerticalAlignment="Center" >
                <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" />
                <TextBoxWidget Name="EditSignDialog.UrlTextBox" Title="Enter Sign Url" Size="480, 50" Description="" Font="{Fonts/Pericles24}" VerticalAlignment="Center" MaximumLength="256" Margin="10, 0"/>
              </CanvasWidget>
            </StackPanelWidget>

            <BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Name="EditSignDialog.UrlTestButton" Text="Try" Margin="0, 10"/>

          </StackPanelWidget>
        </CanvasWidget>
        
      </StackPanelWidget>

      <UniformSpacingPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="10, 15">
        <BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" Name="EditSignDialog.OkButton" Text="OK" />
        <BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" Name="EditSignDialog.UrlButton" Text="URL" />
        <BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" Name="EditSignDialog.LinesButton" Text="Lines" />
        <BevelledButtonWidget Style="{Styles/ButtonStyle_160x60}" HorizontalAlignment="Center" Name="EditSignDialog.CancelButton" Text="Cancel" />
      </UniformSpacingPanelWidget>

    </StackPanelWidget>

  </CanvasWidget>
</CanvasWidget>
