<CanvasWidget xmlns="runtime-namespace:Game">

  <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="0, 0, 0, 0" IsHitTestVisible="true" />

  <CanvasWidget Size="640, 400" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 15">
      
      <LabelWidget Font="{Fonts/Pericles32}" Text="Community Content" HorizontalAlignment="Center"/>

      <CanvasWidget Size="0, 5" />

      <CanvasWidget Size="Infinity, 50">
        <LabelWidget Font="{Fonts/Pericles18}" Color="128, 128, 128" Text="User name is used to identify users when publishing and rating community content." HorizontalAlignment="Center" TextAnchor="HorizontalCenter" WordWrap="true" Margin="30, 0"/>
      </CanvasWidget>

      <CanvasWidget Size="0, Infinity" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <LabelWidget Text="Active User:" Font="{Fonts/Pericles18}" Color="128, 128, 128" HorizontalAlignment="Far" VerticalAlignment="Center"/>
        <CanvasWidget Size="20, 0" />
        <LabelWidget Name="MoreCommunityLinkDialog.User" Text="-" Font="{Fonts/Pericles24}" VerticalAlignment="Center" ClampToBounds="true"/>
        <CanvasWidget Size="10, 0"/>
        <BevelledButtonWidget Name="MoreCommunityLinkDialog.ChangeUser" Text="..." Style="{Styles/ButtonStyle_70x60}" VerticalAlignment="Center"/>
      </StackPanelWidget>

      <CanvasWidget Size="0, 5" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <LabelWidget Text="User ID:" Font="{Fonts/Pericles18}" Color="128, 128, 128" HorizontalAlignment="Far" VerticalAlignment="Center"/>
        <CanvasWidget Size="20, 0" />
        <LabelWidget Name="MoreCommunityLinkDialog.UserId" Text="-" Font="{Fonts/Pericles24}" VerticalAlignment="Center" ClampToBounds="true"/>
        <CanvasWidget Size="10, 0"/>
        <BevelledButtonWidget Name="MoreCommunityLinkDialog.CopyUserId" Text="Copy" Style="{Styles/ButtonStyle_160x60}" VerticalAlignment="Center"/>
      </StackPanelWidget>

      <CanvasWidget Size="0, Infinity" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Name="MoreCommunityLinkDialog.Publish" Style="{Styles/ButtonStyle_310x60}" Text="Publish Link"/>
        <CanvasWidget Size="40, 0" />
        <BevelledButtonWidget Name="MoreCommunityLinkDialog.Close" Style="{Styles/ButtonStyle_160x60}" Text="Close"/>
      </StackPanelWidget>
      
    </StackPanelWidget>
  </CanvasWidget>

</CanvasWidget>
