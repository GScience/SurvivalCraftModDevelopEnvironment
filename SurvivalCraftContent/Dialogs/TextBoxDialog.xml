<CanvasWidget xmlns="runtime-namespace:Game">

  <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="0, 0, 0, 0" IsHitTestVisible="true" />

  <CanvasWidget Size="450, 240" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="10, 10">
      <LabelWidget Name="TextBoxDialog.Title" Font="{Fonts/Pericles32}" Color="255, 255, 255" HorizontalAlignment="Center" Margin="0, 5"/>
      <CanvasWidget Size="0, Infinity" />
      <CanvasWidget Margin="10, 0">
        <RectangleWidget Size="Infinity, 40" FillColor="0, 0, 0, 0" OutlineColor="64, 64, 64, 64"/>
        <TextBoxWidget Name="TextBoxDialog.TextBox" Font="{Fonts/Pericles24}" Color="255, 255, 255" Margin="4, 0" VerticalAlignment="Center" HorizontalAlignment="Stretch" />
      </CanvasWidget>
      <CanvasWidget Size="0, Infinity" />
      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Name="TextBoxDialog.OkButton" Text="OK" Style="{Styles/ButtonStyle_160x60}" />
        <CanvasWidget Size="40, 0" />
        <BevelledButtonWidget Name="TextBoxDialog.CancelButton" Text="Cancel" Style="{Styles/ButtonStyle_160x60}" />
      </StackPanelWidget>
    </StackPanelWidget>
  </CanvasWidget>

</CanvasWidget>
