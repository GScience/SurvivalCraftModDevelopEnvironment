<CanvasWidget xmlns="runtime-namespace:Game">

  <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="0, 0, 0, 0" IsHitTestVisible="true" />

  <CanvasWidget Size="500, 300" ClampToBounds="true" HorizontalAlignment="Center" VerticalAlignment="Center">
    <RectangleWidget FillColor="0, 0, 0, 255" OutlineColor="128, 128, 128, 128" OutlineThickness="2" />
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="0, 15">
      
      <LabelWidget Font="{Fonts/Pericles32}" Text="Adjust Battery Voltage" HorizontalAlignment="Center"/>

      <CanvasWidget Size="0, Infinity" />

      <SliderWidget Name="EditBatteryDialog.VoltageSlider" Granularity="1" MinValue="0" MaxValue="15" HorizontalAlignment="Center" Margin="40, 0" />
      
      <CanvasWidget Size="0, Infinity" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Name="EditBatteryDialog.OK" Style="{Styles/ButtonStyle_160x60}" Text="OK" Margin="20, 0" />
        <BevelledButtonWidget Name="EditBatteryDialog.Cancel" Style="{Styles/ButtonStyle_160x60}" Margin="20, 0" Text="Cancel"/>
      </StackPanelWidget>
      
    </StackPanelWidget>
  </CanvasWidget>

</CanvasWidget>
