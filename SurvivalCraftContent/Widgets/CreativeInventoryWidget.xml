<CreativeInventoryWidget xmlns="runtime-namespace:Game" Size="600, 368">
  
  <BevelledRectangleWidget Texture="{Textures/Gui/Panel}" BevelSize="3" TextureScale="0.5"/>
  
  <StackPanelWidget Direction="Vertical" Margin="2, 0">

    <CanvasWidget Size="0, 5"/>
    
    <StackPanelWidget Name="ControlsPanel" HorizontalAlignment="Center">
      <BevelledButtonWidget Name="CategoryLeftButton" Style="{Styles/ButtonStyle_ArrowLeft}" />
      <BevelledButtonWidget Name="CategoryRightButton" Style="{Styles/ButtonStyle_ArrowRight}" />
      <BevelledButtonWidget Name="CategoryButton" Text="Weapons" Size="240, 60" HorizontalAlignment="Center" VerticalAlignment="Center" Font="{Fonts/Pericles24}" />
      <CanvasWidget Size="Infinity, 0" />
      <LabelWidget Name="PageLabel" HorizontalAlignment="Center" VerticalAlignment="Center" Font="{Fonts/Pericles18}" Margin="6, 0"/>
      <BevelledButtonWidget Name="PageUpButton" Text="" Style="{Styles/ButtonStyle_ArrowUp}" />
      <BevelledButtonWidget Name="PageDownButton" Text="" Style="{Styles/ButtonStyle_ArrowDown}" />
    </StackPanelWidget>

    <CanvasWidget Size="0, 4"/>

    <CanvasWidget Name="PanelContainer" HorizontalAlignment="Center"/>

    <CanvasWidget Size="0, 6"/>

  </StackPanelWidget>
  
</CreativeInventoryWidget>
