<Screen xmlns="runtime-namespace:Game">

  <ClearWidget />
  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets/TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="Game Paused" />
    </CanvasWidget>

    <CanvasWidget Size="Infinity, Infinity" >
      <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">

        <CanvasWidget Size="0, 20" />

        <CanvasWidget Size="650, Infinity" HorizontalAlignment="Center">
          <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="128, 128, 128, 128" />
          <ScrollPanelWidget Direction="Vertical" Margin="1, 2" >
            <StackPanelWidget Name="StatsPanel" Direction="Vertical" Margin="5, 0" HorizontalAlignment="Center" />
          </ScrollPanelWidget>
        </CanvasWidget>
          
        <CanvasWidget Size="0, 20" />

        <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">
          <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
            <BevelledButtonWidget Name="Rate" Style="{Styles/ButtonStyle_310x60}" Text="Rate" HorizontalAlignment="Center" Margin="8, 0" />
            <BevelledButtonWidget Name="RestartAdventure" Style="{Styles/ButtonStyle_310x60}" Text="Reset Adventure" HorizontalAlignment="Center" Margin="8, 0" />
          </StackPanelWidget>
          <CanvasWidget Size="0, 10"/>
          <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
            <BevelledButtonWidget Name="Settings" Style="{Styles/ButtonStyle_310x60}" Text="Settings" HorizontalAlignment="Center" Margin="8, 0" />
            <BevelledButtonWidget Name="Help" Style="{Styles/ButtonStyle_310x60}" Text="Help" HorizontalAlignment="Center" Margin="8, 0" />
          </StackPanelWidget>
          <CanvasWidget Size="0, 10"/>
          <BevelledButtonWidget Name="Quit" Style="{Styles/ButtonStyle_310x60}" Text="Quit" HorizontalAlignment="Center" Margin="0, 0" />
          <CanvasWidget Size="0, 10"/>
        </StackPanelWidget>

      </StackPanelWidget>
    </CanvasWidget>

  </StackPanelWidget>

</Screen>