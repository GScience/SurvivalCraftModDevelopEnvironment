<Screen xmlns="runtime-namespace:Game">

  <ClearWidget />
  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets/TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="Community Content" />
    </CanvasWidget>

    <StackPanelWidget Direction="Vertical" VerticalAlignment="Center">

      <CanvasWidget Size="0, 8" />

      <UniformSpacingPanelWidget Direction="Horizontal" Margin="10, 0">
        <StackPanelWidget HorizontalAlignment="Near">
          <LabelWidget Name="Order" Text="-" Font="{Fonts/Pericles24}" VerticalAlignment="Center" ClampToBounds="true"/>
          <CanvasWidget Size="10, 0"/>
          <BevelledButtonWidget Name="ChangeOrder" Text="..." Style="{Styles/ButtonStyle_70x60}" VerticalAlignment="Center"/>
        </StackPanelWidget>
        <StackPanelWidget HorizontalAlignment="Far">
          <LabelWidget Name="Filter" Text="-" Font="{Fonts/Pericles24}" VerticalAlignment="Center"/>
          <CanvasWidget Size="10, 0"/>
          <BevelledButtonWidget Name="ChangeFilter" Text="..." Style="{Styles/ButtonStyle_70x60}" VerticalAlignment="Center"/>
        </StackPanelWidget>
      </UniformSpacingPanelWidget>

      <CanvasWidget Size="0, 8" />

      <CanvasWidget Margin="10, 0">
        <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="128, 128, 128, 128" />
        <ListPanelWidget Name="List" Direction="Vertical" Margin="3, 3" ItemSize="70" SelectionColor="10, 70, 0, 90"/>
      </CanvasWidget>

      <CanvasWidget Size="0, 8" />

      <StackPanelWidget Direction="Horizontal" Margin="5, 0">
        <BevelledButtonWidget Name="Download" Style="{Styles/ButtonStyle_310x60}" Text="Download"/>
        <CanvasWidget Size="Infinity, 0"/>
        <BevelledButtonWidget Name="Delete" Style="{Styles/ButtonStyle_160x60}" Text="Delete"/>
        <CanvasWidget Size="10, 0"/>
        <BevelledButtonWidget Name="MoreOptions" Style="{Styles/ButtonStyle_70x60}" Text="..."/>
      </StackPanelWidget>

      <CanvasWidget Size="0, 8" />

    </StackPanelWidget>
    
  </StackPanelWidget>

</Screen>