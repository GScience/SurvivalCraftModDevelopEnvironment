<Screen xmlns="runtime-namespace:Game">

  <ClearWidget />
  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets/TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="" />
    </CanvasWidget>

    <StackPanelWidget Direction="Vertical" VerticalAlignment="Center">

      <CanvasWidget Size="0, 8"/>

      <StackPanelWidget Direction="Horizontal">
        <CanvasWidget Size="10, 0"/>
        <LabelWidget Name="ProviderName" Text="-" Font="{Fonts/Pericles24}" VerticalAlignment="Center"/>
        <CanvasWidget Size="10, 0"/>
        <BevelledButtonWidget Name="ChangeProvider" Text="..." Style="{Styles/ButtonStyle_70x60}" VerticalAlignment="Center"/>
        <CanvasWidget Size="Infinity, 0"/>
        <BevelledButtonWidget Name="LoginLogout" Style="{Styles/ButtonStyle_310x60}" Text="-" VerticalAlignment="Center"/>
      </StackPanelWidget>

      <CanvasWidget Size="0, 8"/>

      <CanvasWidget Margin="10, 0">
        <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="128, 128, 128, 128" />
        <ListPanelWidget Name="DirectoryList" Direction="Vertical" Margin="3, 3" ItemSize="70" SelectionColor="10, 70, 0, 90"/>
      </CanvasWidget>

      <CanvasWidget Size="0, 8"/>

      <StackPanelWidget Direction="Horizontal">
        <BevelledButtonWidget Name="UpDirectory" Style="{Styles/ButtonStyle_UpDirectory}"/>
        <CanvasWidget Size="10, 0"/>
        <BevelledButtonWidget Name="Action" Style="{Styles/ButtonStyle_310x60}" Text="-"/>
        <CanvasWidget Size="Infinity, 0"/>
        <BevelledButtonWidget Name="CopyLink" Style="{Styles/ButtonStyle_310x60}" Text="Copy Link"/>
      </StackPanelWidget>

      <CanvasWidget Size="0, 8"/>

    </StackPanelWidget>
    
  </StackPanelWidget>

</Screen>