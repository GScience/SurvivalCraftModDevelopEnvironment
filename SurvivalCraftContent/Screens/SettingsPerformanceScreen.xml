<Screen xmlns="runtime-namespace:Game">

  <ClearWidget />
  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets/TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="Adjust Performance Settings" />
    </CanvasWidget>

    <CanvasWidget Margin="10, 20">
      <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="128, 128, 128, 128" />
      <ScrollPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="3, 3">
        <StackPanelWidget Direction="Vertical" VerticalAlignment="Center" HorizontalAlignment="Center" IsHitTestVisible="false">
        
          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="Screen Resolution:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <BevelledButtonWidget Name="ResolutionButton" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="Visibility Range:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <StackPanelWidget Direction="Vertical" VerticalAlignment="Center" Margin="20, 0">
              <SliderWidget Name="VisibilityRangeSlider" Size="360, 60" Granularity="1" />
              <LabelWidget Name="VisibilityRangeWarningLabel" Font="{Fonts/Pericles18}" TextAnchor="HorizontalCenter" Color="128, 128, 128" HorizontalAlignment="Center" />
            </StackPanelWidget>
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="Camera View Angle:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <BevelledButtonWidget Name="ViewAnglesButton" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="Sky Rendering Mode:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <BevelledButtonWidget Name="SkyRenderingModeButton" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="Texture Animation Mode:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <BevelledButtonWidget Name="TextureAnimationModeButton" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="Object Shadows:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <BevelledButtonWidget Name="ObjectShadowsButton" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="AI Pathfinding:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <BevelledButtonWidget Name="PathfindingButton" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal" Margin="0, 3">
            <LabelWidget Text="Framerate Limit:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <SliderWidget Name="FramerateLimitSlider" Size="360, 60" VerticalAlignment="Center" Margin="20, 0" MinValue="0" MaxValue="4" Granularity="1" />
          </UniformSpacingPanelWidget>

          <UniformSpacingPanelWidget Direction="Horizontal">
            <LabelWidget Text="Display FPS Counter:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
            <BevelledButtonWidget Name="DisplayFpsCounterButton" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
          </UniformSpacingPanelWidget>

        </StackPanelWidget>
      </ScrollPanelWidget>
    </CanvasWidget>
    
  </StackPanelWidget>

</Screen>