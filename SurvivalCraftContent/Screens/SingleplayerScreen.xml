<Screen xmlns="runtime-namespace:Game">
  <PanoramaWidget></PanoramaWidget>

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets/TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="Existing Worlds" />
    </CanvasWidget>

    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">

      <CanvasWidget Size="Infinity, 10" />

      <StackPanelWidget Direction="Vertical">
        <CanvasWidget Margin="10, 0">
          <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="128, 128, 128, 128" />
          <ListPanelWidget Name="WorldsList" Direction="Vertical" HorizontalAlignment="Center" Margin="3, 3" ItemSize="70" SelectionColor="10, 70, 0, 90"/>
        </CanvasWidget>
      </StackPanelWidget>

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" Margin="4, 10">
        <BevelledButtonWidget Name="Play" Style="{Styles/ButtonStyle_310x60}" Text="Play!" VerticalAlignment="Center" >
          <BevelledRectangleWidget Name="BevelledButton.Rectangle" CenterColor="70, 220, 60" BevelColor="70, 220, 60" />
        </BevelledButtonWidget>
        <BevelledButtonWidget Name="NewWorld" Style="{Styles/ButtonStyle_310x60}" Text="New World" VerticalAlignment="Center" />
        <CanvasWidget Size="Infinity, 0" />
        <BevelledButtonWidget Name="Properties" Style="{Styles/ButtonStyle_70x60}" Text="..." VerticalAlignment="Center" />
      </StackPanelWidget>

    </StackPanelWidget>

  </StackPanelWidget>

</Screen>