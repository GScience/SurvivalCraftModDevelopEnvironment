<Screen xmlns="runtime-namespace:Game">

  <ClearWidget />
  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets/TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="Choose Settings Category" />
    </CanvasWidget>

    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">

      <CanvasWidget Size="Infinity, Infinity">
        <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
          <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="8, 0">
            <BevelledButtonWidget Name="Performance" Text="Performance" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5" />
            <BevelledButtonWidget Name="Graphics" Text="Graphics" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5" />
            <BevelledButtonWidget Name="Ui" Text="User Interface" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5" />
            <BevelledButtonWidget Name="Compatibility" Text="Compatibility" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5" />
          </StackPanelWidget>
          <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Near" Margin="8, 0">
            <BevelledButtonWidget Name="Audio" Text="Audio" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5" />
            <BevelledButtonWidget Name="Controls" Text="Controls" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5" />
            <BevelledButtonWidget Name="Sensitivities" Text="Sensitivities" Style="{Styles/ButtonStyle_310x60}" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0, 5" />
          </StackPanelWidget>
        </StackPanelWidget>
      </CanvasWidget>

    </StackPanelWidget>
  
  </StackPanelWidget>

</Screen>