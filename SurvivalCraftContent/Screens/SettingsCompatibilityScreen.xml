<Screen xmlns="runtime-namespace:Game">

  <ClearWidget />
  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets/TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="Adjust Device Compatibility" />
    </CanvasWidget>

    <StackPanelWidget Direction="Vertical" Margin="10, 0">

      <CanvasWidget Size="0, 20" />

      <LabelWidget Font="{Fonts/Pericles18}" Color="255, 255, 255" HorizontalAlignment="Center" TextAnchor="HorizontalCenter" WordWrap="true" Text="Use these settings only if you experience issues with the game." />

      <CanvasWidget Size="0, 20" />

      <CanvasWidget>
        <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="128, 128, 128, 128" />
        <ScrollPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="3, 3">
          <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

            <UniformSpacingPanelWidget Direction="Horizontal">
              <LabelWidget Text="Invisible Models Workaround:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
              <BevelledButtonWidget Name="InvisibleModelsWorkaroundButton" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
            </UniformSpacingPanelWidget>

            <UniformSpacingPanelWidget Direction="Horizontal">
              <LabelWidget Text="Singlethreaded Terrain Update:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
              <BevelledButtonWidget Name="SinglethreadedTerrainUpdateButton" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
            </UniformSpacingPanelWidget>

            <UniformSpacingPanelWidget Name="DisableAudioTrackCachingContainer" Direction="Horizontal">
              <LabelWidget Text="Use AudioTrack Caching:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
              <BevelledButtonWidget Name="UseAudioTrackCachingButton" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
            </UniformSpacingPanelWidget>

            <UniformSpacingPanelWidget Name="UseReducedZRangeContainer" Direction="Horizontal">
              <LabelWidget Text="Use Reduced Z-Range:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
              <BevelledButtonWidget Name="UseReducedZRangeButton" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" />
            </UniformSpacingPanelWidget>

			<CanvasWidget Size="0, 20" />

            <UniformSpacingPanelWidget Direction="Horizontal">
              <LabelWidget Text="View Game Log:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
              <BevelledButtonWidget Name="ViewGameLogButton" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" Text="..."/>
            </UniformSpacingPanelWidget>
			
            <UniformSpacingPanelWidget Direction="Horizontal">
			  <LabelWidget Text="Reset To Defaults:" Font="{Fonts/Pericles18}" HorizontalAlignment="Far" VerticalAlignment="Center" Margin="20, 0" />
              <BevelledButtonWidget Name="ResetDefaultsButton" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" Margin="20, 0" Text="Reset"/>
            </UniformSpacingPanelWidget>

			</StackPanelWidget>
        </ScrollPanelWidget>
      </CanvasWidget>

      <CanvasWidget Size="0, 10"/>

      <CanvasWidget Size="Infinity, 80" HorizontalAlignment="Center" VerticalAlignment="Center">
        <LabelWidget Name="Description" HorizontalAlignment="Center" VerticalAlignment="Center" TextAnchor="HorizontalCenter, VerticalCenter" Font="{Fonts/Pericles18}" Color="128, 128, 128" WordWrap="true" />
      </CanvasWidget>

      <CanvasWidget Size="0, 10"/>

    </StackPanelWidget>
  </StackPanelWidget>

</Screen>