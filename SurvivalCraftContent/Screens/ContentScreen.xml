<Screen xmlns="runtime-namespace:Game">

  <ClearWidget />
  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets/TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="Choose Content Type" />
    </CanvasWidget>

    <CanvasWidget Size="Infinity, 0" />
    
    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">

      <StackPanelWidget Direction="Horizontal">
        <CanvasWidget Size="350, 90">
          <LabelWidget Text="Access content previously uploaded to one of your private storage spaces" Font="{Fonts/Pericles18}" Color="128, 128, 128" WordWrap="true" HorizontalAlignment="Far" VerticalAlignment="Center" TextAnchor="VerticalCenter,HorizontalCenter" />
        </CanvasWidget>
        <CanvasWidget Size="10, 0" />
        <BevelledButtonWidget Name="External" Text="Private" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" />
      </StackPanelWidget>

      <StackPanelWidget Direction="Horizontal">
        <CanvasWidget Size="350, 90">
          <LabelWidget Text="Access content created by other community members and registered for public access" Font="{Fonts/Pericles18}" Color="128, 128, 128" WordWrap="true" HorizontalAlignment="Far" VerticalAlignment="Center" TextAnchor="VerticalCenter,HorizontalCenter" />
        </CanvasWidget>
        <CanvasWidget Size="10, 0" />
        <BevelledButtonWidget Name="Community" Text="Community" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" />
      </StackPanelWidget>

      <StackPanelWidget Direction="Horizontal">
        <CanvasWidget Size="350, 90">
          <LabelWidget Text="Download a file directly from a web link, if you know it (it's best to use copy/paste to enter links)" Font="{Fonts/Pericles18}" Color="128, 128, 128" WordWrap="true" HorizontalAlignment="Far" VerticalAlignment="Center" TextAnchor="VerticalCenter, HorizontalCenter" />
        </CanvasWidget>
        <CanvasWidget Size="10, 0" />
        <BevelledButtonWidget Name="Link" Text="From Link" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" />
      </StackPanelWidget>

      <CanvasWidget Size="0, 30" />

      <StackPanelWidget Direction="Horizontal">
        <CanvasWidget Size="350, 90">
          <LabelWidget Text="Manage downloaded content" Font="{Fonts/Pericles18}" Color="128, 128, 128" WordWrap="true" HorizontalAlignment="Far" VerticalAlignment="Center" TextAnchor="VerticalCenter, HorizontalCenter" />
        </CanvasWidget>
        <CanvasWidget Size="10, 0" />
        <BevelledButtonWidget Name="Manage" Text="Manage" Style="{Styles/ButtonStyle_310x60}" VerticalAlignment="Center" />
      </StackPanelWidget>

    </StackPanelWidget>

    <CanvasWidget Size="Infinity, 0" />
  
  </StackPanelWidget>

</Screen>