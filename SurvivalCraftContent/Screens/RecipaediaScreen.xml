<Screen xmlns="runtime-namespace:Game">

  <ClearWidget />
  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets/TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="Recipaedia" />
    </CanvasWidget>

    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">

      <CanvasWidget Size="0, 10" />
      
      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Style="{Styles/ButtonStyle_ArrowLeft}" Name="PreviousCategory" Margin="20, 0" VerticalAlignment="Center"/>
        <CanvasWidget Size="340, 60" VerticalAlignment="Center">
          <LabelWidget Name="Category" HorizontalAlignment="Center" VerticalAlignment="Center"/>
        </CanvasWidget>
        <BevelledButtonWidget Style="{Styles/ButtonStyle_ArrowRight}" Name="NextCategory" Margin="20, 0" VerticalAlignment="Center"/>
      </StackPanelWidget>

      <CanvasWidget Size="0, 10" />

      <StackPanelWidget Direction="Vertical" Margin="20, 0">
        <CanvasWidget>
          <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="128, 128, 128, 128" />
          <ListPanelWidget Name="BlocksList" Direction="Vertical" Margin="5, 3" ItemSize="70" SelectionColor="10, 70, 0, 90"/>
        </CanvasWidget>
      </StackPanelWidget>

      <CanvasWidget Size="0, 10" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center" Margin="0, 0">
        <BevelledButtonWidget Name="DetailsButton" Style="{Styles/ButtonStyle_310x60}" Text="Description" HorizontalAlignment="Center"/>
        <CanvasWidget Size="20, 0" />
        <BevelledButtonWidget Name="RecipesButton" Style="{Styles/ButtonStyle_310x60}" Text="Recipes" HorizontalAlignment="Center"/>
      </StackPanelWidget>

      <CanvasWidget Size="0, 10" />

    </StackPanelWidget>

  </StackPanelWidget>
  
</Screen>