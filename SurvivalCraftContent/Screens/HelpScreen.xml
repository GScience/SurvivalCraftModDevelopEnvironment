<Screen xmlns="runtime-namespace:Game">

  <ClearWidget />
  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets/TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="Help Topics" />
    </CanvasWidget>

    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">

      <CanvasWidget Size="0, 20" />
      
      <StackPanelWidget Direction="Vertical" Margin="20, 0">
        <CanvasWidget>
          <RectangleWidget FillColor="0, 0, 0, 192" OutlineColor="128, 128, 128, 128" />
          <ListPanelWidget Name="TopicsList" Direction="Vertical" Margin="5, 3" ItemSize="64" SelectionColor="10, 70, 0, 90"/>
        </CanvasWidget>
      </StackPanelWidget>

      <CanvasWidget Size="0, 10" />

      <StackPanelWidget Direction="Horizontal" HorizontalAlignment="Center">
        <BevelledButtonWidget Name="ShowButton" Style="{Styles/ButtonStyle_310x60}" Text="Show Topic"/>
        <CanvasWidget Size="20, 0" />
        <BevelledButtonWidget Name="RecipaediaButton" Style="{Styles/ButtonStyle_310x60}" Text="Recipaedia">
          <BevelledRectangleWidget Name="BevelledButton.Rectangle" CenterColor="70, 220, 60" BevelColor="70, 220, 60" />
        </BevelledButtonWidget>
      </StackPanelWidget>
      
      <CanvasWidget Size="0, 10" />

    </StackPanelWidget>

  </StackPanelWidget>
  
</Screen>