<Screen xmlns="runtime-namespace:Game">

  <ClearWidget />
  <PanoramaWidget />

  <StackPanelWidget Direction="Horizontal">

    <CanvasWidget Style="{Widgets/TopBarContents}" >
      <LabelWidget Name="TopBar.Label" Text="Block Recipes" />
    </CanvasWidget>

    <StackPanelWidget Direction="Vertical" HorizontalAlignment="Center">

      <StackPanelWidget Margin="0, 10">
        <BevelledButtonWidget Style="{Styles/ButtonStyle_ArrowLeft}" Name="PreviousRecipe" Margin="20, 0" VerticalAlignment="Center"/>
        <CanvasWidget Size="Infinity, Infinity" VerticalAlignment="Center">
          <CraftingRecipeWidget Name="CraftingRecipe" HorizontalAlignment="Center" VerticalAlignment="Center" IsVisible="false"/>
          <SmeltingRecipeWidget Name="SmeltingRecipe" HorizontalAlignment="Center" VerticalAlignment="Center" IsVisible="false"/>
        </CanvasWidget>
        <BevelledButtonWidget Style="{Styles/ButtonStyle_ArrowRight}" Name="NextRecipe" Margin="20, 0" VerticalAlignment="Center"/>
      </StackPanelWidget>

    </StackPanelWidget>

  </StackPanelWidget>
  
</Screen>